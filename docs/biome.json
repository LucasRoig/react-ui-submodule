{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "info"
      },
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "warn"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noConsole": "warn",
        "useAwait": "error"
      }
    }
  },
  "javascript": {
    "globals": ["React", "JSX"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,

    "includes": [
      "**",
      "!**/.*.js",
      "!**/.next",
      "!**/.vscode",
      "!**/.turbo",
      "!**/node_modules",
      "!**/dist",
      "!**/generated",
      "!**/coverage",
      "!**/.content-collections"
    ]
  }
}
